html(lang="en")
head
    title= `${title}`
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
body 
    div.container 
        div.add_object.card
            h1 Create a new Custom Object
            form(method="POST").center
                
                label(for="newName") Name:
                input(type="text" name="newName" required placeholder="Required")
                label(for="color") Color
                input(type="text" name="color" required placeholder="Required")
                label(for="category") Category
                input(type="text" name="category" required placeholder="Required")


                input(type="submit" value="Submit")
    div.return_block 
        h3 Return to the homepage
        a(href="http://localhost:3000/") Return 